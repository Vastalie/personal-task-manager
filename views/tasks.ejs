<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
</head>
<body>
    <h1>Task List</h1>

    <ul>
        <% tasks.forEach((task) => {
            const dueDate = new Date(task.due_date);
            const now = new Date();
            let statusText;

            if (task.completed) {
                statusText = "Completed";
            } else if (dueDate && now > dueDate) {
                statusText = "Overdue";
            } else {
                statusText = "Pending";
            }
        %>
            <li>
                <strong>Priority:</strong> <%= task.priority %><br>
                <strong>Title:</strong> <%= task.title %><br>
                <% if (user) { %>
                    <strong>Description:</strong> <%= task.decrypted_description %><br>
                <% } else { %>
                    <strong>Description (Encrypted):</strong> <%= task.encrypted_description %><br>
                <% } %>
                
                <strong>Due Date:</strong> <%= dueDate.toLocaleDateString() %> [<%= statusText %>]

                <% if (user) { %>
                    <form action="/usr/745/tasks/<%= task.id %>/complete" method="POST" style="display:inline;">
                        <button type="submit">Mark as Completed</button>
                    </form>
                    <form action="/usr/745/tasks/<%= task.id %>/pending" method="POST" style="display:inline;">
                        <button type="submit">Mark as Pending</button>
                    </form>
                    <form action="/usr/745/tasks/<%= task.id %>/delete" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
            </li>
        <% }); %>
    </ul>

    <% if (user) { %>
        <a href="/tasks/new">Add a New Task</a>
        <br><br>
        <a href="/logout">Logout</a>
    <% } else { %>
        <p><a href="/login">Log in</a> to manage tasks.</p>
    <% } %>
</body>
</html>
